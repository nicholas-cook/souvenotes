<manifest package="com.souvenotes.souvenotes"

          xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".login.LoginActivity">

        </activity>
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".loginoptions.LoginOptionsActivity"/>
        <activity android:name=".registration.RegistrationActivity"/>
        <activity android:name=".list.NotesListActivity"/>
        <activity android:name=".note.AddNoteActivity"/>
    </application>

</manifest>
